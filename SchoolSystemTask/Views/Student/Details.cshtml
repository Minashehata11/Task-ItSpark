@model StudentViewModel
<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h3>Student Details</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="col-form-label">Name</label>
                        <input asp-for="Name" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="col-form-label">Email</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" disabled checked="@Model.Enrolled">
                            <label class="form-check-label" for="enrolledCheckbox">Enrolled</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="City" class="col-form-label">City</label>
                        <input asp-for="City" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="col-form-label">Gender</label>
                        <input asp-for="Gender" class="form-control" readonly />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Update</a>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
