@model CreateOrEditViewModel
@{
    var Classes = new SelectList(ViewBag.classes, "Id", "Name");
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h3>Create or Edit Student</h3>
        </div>
        <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name" class="col-form-label">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="col-form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Pass" class="col-form-label">Password</label>
                    <input type="password" asp-for="Pass" class="form-control" placeholder="Enter Password" />
                    <span asp-validation-for="Pass" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="col-form-label">Address</label>
                    <input asp-for="Address" class="form-control" placeholder="Enter Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateOfBirth" class="col-form-label">Date of Birth</label>
                    <input asp-for="DateOfBirth" class="form-control" placeholder="Enter Date of Birth" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NationalId" class="col-form-label">National ID</label>
                    <input asp-for="NationalId" class="form-control" placeholder="Enter National ID" />
                    <span asp-validation-for="NationalId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Remarks" class="col-form-label">Remarks</label>
                    <input asp-for="Remarks" class="form-control" placeholder="Enter Remarks" />
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender" class="col-form-label">Gender</label>
                    <select asp-for="Gender" class="form-control">
                        @foreach (var gender in Enum.GetValues(typeof(SchoolSystemStak.DAL.Models.Gender)))
                        {
                            <option value="@gender">@gender</option>
                        }
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="City" class="col-form-label">City</label>
                    <select asp-for="City" class="form-control">
                        @foreach (var city in Enum.GetValues(typeof(SchoolSystemStak.DAL.Models.City)))
                        {
                            <option value="@city">@city</option>
                        }
                    </select>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ClassId" class="col-form-label">Class</label>
                    <select asp-for="ClassId" asp-items="Classes" class="form-control">
                        <option value="">-- Select Class --</option>
                    </select>
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FileImage" class="col-form-label">Upload Image</label>
                    <input type="file" asp-for="FileImage" class="form-control-file" />
                </div>

        </div>
    </div>
</div>
<br />