@model CreateOrEditViewModel
@{
    var Classes = new SelectList(ViewBag.classes, "Id", "Name");
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-group">
    <label asp-for="@Model.Name" class="col-form-label"> </label>
    <input asp-for="@Model.Name" class="form-control" />
    <span asp-validation-for="@Model.Name" class="text-danger"></span>

</div>
<div class="form-group">
    <label asp-for="@Model.Email" class="col-form-label"> </label>
    <input asp-for="@Model.Email" class="form-control" />
    <span asp-validation-for="@Model.Email" class="text-danger"></span>

</div>
<div class="form-group">
<label asp-for="@Model.Pass" class="col-form-label"> </label>
<input type="password" asp-for="@Model.Pass" class="form-control" />
<span asp-validation-for="@Model.Pass" class="text-danger"></span>

</div>

<div class="form-group">
    <label asp-for="@Model.Address" class="col-form-label"> </label>
    <input asp-for="@Model.Address" class="form-control" />
    <span asp-validation-for="@Model.Address" class="text-danger"></span>

</div>
<div class="form-group">
    <label asp-for="@Model.DateOfBirth" class="col-form-label"> </label>
    <input asp-for="@Model.DateOfBirth" class="form-control" />
    <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>

</div>
<div class="form-group">
    <label asp-for="@Model.NationalId" class="col-form-label"> </label>
    <input asp-for="@Model.NationalId" class="form-control" />
    <span asp-validation-for="@Model.NationalId" class="text-danger"></span>

</div>
<div class="form-group">
    <label asp-for="@Model.Address" class="col-form-label"> </label>
    <input asp-for="@Model.Address" class="form-control" />
    <span asp-validation-for="@Model.Address" class="text-danger"></span>

</div>
<div class="form-group">
    <label asp-for="@Model.Remarks" class="col-form-label"> </label>
    <input asp-for="@Model.Remarks" class="form-control" />
    <span asp-validation-for="@Model.Remarks" class="text-danger"></span>

</div>
<div class="form-group">
    <select asp-for="Gender">
        @foreach (var gender in Enum.GetValues(typeof(SchoolSystemStak.DAL.Models.Gender)))
        {
            <option value="@gender">@gender</option>
        }
    </select>
    <span asp-validation-for="@Model.Gender" class="text-danger"></span>

</div>
<div class="form-group">
    <select asp-for="City">
        @foreach (var city in Enum.GetValues(typeof(SchoolSystemStak.DAL.Models.City)))
        {
            <option value="@city">@city</option>
        }
    </select>
    <span asp-validation-for="@Model.City" class="text-danger"></span>

</div>
<div class="form-group">
    <label asp-for="@Model.ClassId" class="col-form-label"> </label>
    <select asp-for="@Model.ClassId" asp-items="Classes" class="form-control">
        <option>--select Department--</option>

    </select>
    <span asp-validation-for="@Model.ClassId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.FileImage" class="col-form-label"> </label>
    <input type="file" asp-for="@Model.FileImage" class="form-control"/>
</div>

<br />