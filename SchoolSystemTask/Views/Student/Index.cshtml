@using SchoolSystemTask.BAL.Specefication
@model IEnumerable<StudentViewModel>
<h1>Students</h1>
<br />
<a asp-action="Create" class="btn btn-primary"> Add New Student</a>
<br />
<br />

<form asp-action="Index" asp-controller="Student">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search.By Name." name="SearhName" class="form-control" />
        </div>
        <div class="col-sm-8">
            <input placeholder="Search By Class Id.." name="classid" class="form-control" />
        </div>
        <div class="form-group">
            <label for="FromDate">From Date:</label>
            <input type="date" id="FromDate" name="startDate" />
        </div>
        <div class="form-group">
            <label for="ToDate">To Date:</label>
            <input type="date" id="ToDate" name="endDate" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>

    </div>

</form>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>

                <th scope="col">Name</th>

                <th scope="col">city</th>
                <th scope="col">Gender</th>
                <th scope="col">Class</th>

                <th scope="col">Details</th>
                <th scope="col">Update</th>

                <th scope="col">Delete</th>




            </tr>
        </thead>

        @foreach (var Student in Model)
        {
            <tbody class="table-group-divider">
                <tr>

                    <td>@Student.Name</td>



                    <td>@Student.City.ToString()</td>
                    <td>@Student.Gender.ToString()</td>
                    <td>@Student.ClassName</td>

                    <td>
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@Student.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Student.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" onclick="return confirm('Are You Sure  You want To Delete user :@Student.Name')" asp-action="Delete" asp-route-id="@Student.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>


                </tr>

            </tbody>
        }


    </table>
}
else
{
    <div class="alert alert-warning">
        <h3> NO  Students Found ..!  </h3>
    </div>
}